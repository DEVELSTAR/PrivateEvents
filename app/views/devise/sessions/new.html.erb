<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2 is-spaced has-text-centered">Log In</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.label :email, class: "label" %>
              <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email"%>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :password, class: "label" %>
              <%= f.password_field :password, class: "input", autofocus: true, autocomplete: "current-password"%>
            </div>
          </div>
          <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="control">
              <%= f.label :remember_me, class: "label" %>
              <%= f.check_box :remember_me, class: "checkbox", autofocus: true %>
            </div>
          </div>
        <% end %>
          <div class="field">
            <div class="control">
              <%= f.submit "Log in", class: "button is-primary is-large is-fullwidth" %>
            </div>
          </div>
        <% end %>
       <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
